.main-chat__messages__first{data: {message: {id: message.id}}}
  .main-chat__messages__first__name
    = message.user.name
  .main-chat__messages__first__data
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .main-chat__messages__text
      - if message.content.present?
        = message.content
        = image_tag message.image.url, class: 'main-chat__messages__image' if message.image.present?

