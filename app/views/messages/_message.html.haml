.main-chat__messages__first{data: {message: {id: message.id}}}
  .upper-message
    .upper-message__name
      = message.user.name
    .upper-message__data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .lower-message
    .lower-message__text
      - if message.content.present?
        = message.content
      = image_tag message.image.url, class: 'lower-message__text__image' if message.image.present?