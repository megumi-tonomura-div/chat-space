.chat-side
  .chat-side__header
    .chat-side__header__box
      .chat-side__header__box__user-name
        = current_user.name
      .chat-side__header__box__menu
        .chat-side__header__box__menu__new-group
        = link_to new_group_path do
          = icon('far', 'edit',class: 'side-bar__user-name__content__logo__edit')
        .chat-side__header__box__menu__edit-user
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'side-bar__user-name__content__logo__setting')

  .chat-side__group
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
